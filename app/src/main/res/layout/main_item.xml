<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app.cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/et_articleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Article Name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/et_publisherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_articleName"
            android:layout_marginRight="20dp"
            android:text="Publisher Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_articleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_publisherName"
            android:layout_marginRight="20dp"
            android:text="Article Type"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_articleType"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_updateArticle"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/button"
                android:backgroundTint="@color/button"
                android:text="Update"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_deleteArticle"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/button"
                android:text="Delete"
                android:textAllCaps="false" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>